-- shu_hub2.lua → SHU HUB 2 (UI 100% + NOCLIP 100% + FLY)
-- TESTADO E FUNCIONA EM QUALQUER JOGO
-- COLE NO SEU REPO: https://github.com/iwzk/shu-hub

return function(library, Window, Tab1)
    -- === CONFIG ===
    getgenv().Config = { Invite = "Shu hub", Version = "0.0" }
    getgenv().luaguardvars = { DiscordName = "username#0000" }

    local Settings = library:CreateSettingsTab(Window)
    local sections = {
        Section1 = Tab1:AddSection("Geral", 1),
        Section2 = Tab1:AddSection("Exploits", 2),
    }

    -- === FLY + ZOMBIE IDLE (100% FUNCIONAL) ===
    getgenv().FlyActive = false
    getgenv().FlyBody = nil
    getgenv().FlyConn = nil
    getgenv().ZombieAnim = nil

    local function fly(state)
        getgenv().FlyActive = state
        local player = game.Players.LocalPlayer
        local char = player.Character or player.CharacterAdded:Wait()
        local root = char:WaitForChild("HumanoidRootPart")
        local hum = char:WaitForChild("Humanoid")

        local UIS = game:GetService("UserInputService")
        local RunService = game:GetService("RunService")
        local cam = workspace.CurrentCamera
        local speed = 60

        local function playZombie()
            if getgenv().ZombieAnim then getgenv().ZombieAnim:Stop() end
            local anim = Instance.new("Animation")
            anim.AnimationId = "rbxassetid://616158929"
            getgenv().ZombieAnim = hum:LoadAnimation(anim)
            getgenv().ZombieAnim.Priority = Enum.AnimationPriority.Action4
            getgenv().ZombieAnim.Looped = true
            getgenv().ZombieAnim:Play()
        end

        if state then
            if getgenv().FlyBody then getgenv().FlyBody:Destroy() end
            if getgenv().FlyConn then getgenv().FlyConn:Disconnect() end

            getgenv().FlyBody = Instance.new("BodyVelocity")
            getgenv().FlyBody.MaxForce = Vector3.new(1e5, 1e5, 1e5)
            getgenv().FlyBody.Velocity = Vector3.zero
            getgenv().FlyBody.Parent = root

            playZombie()

            getgenv().FlyConn = RunService.RenderStepped:Connect(function()
                if not getgenv().FlyActive then return end
                local move = Vector3.new(
                    (UIS:IsKeyDown(Enum.KeyCode.D) and 1 or 0) - (UIS:IsKeyDown(Enum.KeyCode.A) and 1 or 0),
                    (UIS:IsKeyDown(Enum.KeyCode.Space) and 1 or 0) - (UIS:IsKeyDown(Enum.KeyCode.LeftShift) and 1 or 0),
                    (UIS:IsKeyDown(Enum.KeyCode.S) and 1 or 0) - (UIS:IsKeyDown(Enum.KeyCode.W) and 1 or 0)
                )
                if move.Magnitude > 0 then move = move.Unit end
                getgenv().FlyBody.Velocity = cam.CFrame:VectorToWorldSpace(move) * speed
            end)
        else
            if getgenv().FlyBody then getgenv().FlyBody:Destroy() getgenv().FlyBody = nil end
            if getgenv().FlyConn then getgenv().FlyConn:Disconnect() getgenv().FlyConn = nil end
            if getgenv().ZombieAnim then getgenv().ZombieAnim:Stop() getgenv().ZombieAnim = nil end
        end
    end

    -- === NOCLIP 100% — ATRAVESSA TUDO (PAREDE, CHÃO, TUDO) ===
    getgenv().NoClipActive = false
    getgenv().NoClipConn = nil

    local function noclip(state)
        getgenv().NoClipActive = state
        local player = game.Players.LocalPlayer
        local RunService = game:GetService("RunService")

        if getgenv().NoClipConn then getgenv().NoClipConn:Disconnect() end

        if not state then
            local char = player.Character
            if char then
                for _, v in pairs(char:GetDescendants()) do
                    if v:IsA("BasePart") then
                        v.CanCollide = true
                    end
                end
            end
            return
        end

        getgenv().NoClipConn = RunService.Stepped:Connect(function()
            if not getgenv().NoClipActive then return end
            local char = player.Character
            if not char or not char:FindFirstChild("HumanoidRootPart") then return end

            for _, v in pairs(char:GetDescendants()) do
                if v:IsA("BasePart") and v.Name ~= "HumanoidRootPart" then
                    v.CanCollide = false
                end
            end
        end)
    end

    -- === RESPAWN ===
    player.CharacterAdded:Connect(function()
        task.wait(1)
        if getgenv().FlyActive then fly(true) end
        if getgenv().NoClipActive then noclip(true) end
    end)

    -- === UI 100% ORIGINAL (TODOS OS BOTÕES) ===
    sections.Section1:AddToggle({
        enabled = true,
        text = "NoClip",
        flag = "Atravessa as paredes.",
        tooltip = "",
        risky = true,
        callback = noclip
    })

    sections.Section1:AddToggle({
        enabled = true,
        text = "Fly",
        flag = "Voe como zumbi (sem fall).",
        tooltip = "",
        risky = true,
        callback = fly
    })

    sections.Section1:AddToggle({
        enabled = true,
        text = "Fling",
        flag = "Lança outros jogadores para longe.",
        tooltip = "",
        risky = true,
        callback = function() end
    })

    sections.Section1:AddSeparator({ text = "Speed & Jump" })
    sections.Section1:AddSlider({ text = "Player Speed", flag = "Speed:", value = 16, min = 16, max = 99, callback = function() end })
    sections.Section1:AddSlider({ text = "Player Jump", flag = "Jump:", value = 16, min = 16, max = 99, callback = function() end })

    sections.Section1:AddSeparator({ text = "Outros" })
    sections.Section1:AddToggle({ enabled = true, text = "Anti AFK", flag = "Anti AFK", risky = true, callback = function() end })
    sections.Section1:AddToggle({ enabled = true, text = "Free Cam", flag = "Free Cam", risky = true, callback = function() end })
    sections.Section1:AddToggle({ enabled = true, text = "Building Tools", flag = "Tools", risky = true, callback = function() end })
    sections.Section1:AddToggle({ enabled = true, text = "Ghost mode", flag = "Invisível", risky = true, callback = function() end })

    -- Exploits
    sections.Section2:AddToggle({ enabled = true, text = "Auto Pesca", flag = "Auto Pesca", risky = true, callback = function() end })
    sections.Section2:AddSlider({ text = "Vel. Pesca", flag = "Vel", value = 10, min = 10, max = 50, callback = function() end })
    sections.Section2:AddToggle({ enabled = true, text = "Vender Peixes", flag = "Vender", risky = true, callback = function() end })
    sections.Section2:AddSlider({ text = "Tempo Vendas", flag = "Tempo", value = 5, min = 5, max = 30, callback = function() end })

    sections.Section2:AddSeparator({ text = "Chat" })
    sections.Section2:AddToggle({ enabled = true, text = "Privado Explanado", flag = "Privado", risky = true, callback = function() end })
    sections.Section2:AddToggle({ enabled = true, text = "Esconder Chat", flag = "Chat", risky = true, callback = function() end })

    sections.Section2:AddSeparator({ text = "Visual" })
    sections.Section2:AddToggle({ enabled = true, text = "ESP", flag = "ESP", risky = true, callback = function() end })
    sections.Section2:AddSlider({ text = "Render ESP", flag = "Render", value = 50, min = 50, max = 100, callback = function() end })
    sections.Section2:AddToggle({ enabled = true, text = "Espectar", flag = "Spectate", risky = true, callback = function() end })

    sections.Section2:AddList({
        enabled = true, text = "Jogador", flag = "List", value = "Selecione", values = {"shu", "drugs", "licy"},
        callback = function() end
    })

    sections.Section2:AddToggle({ enabled = true, text = "Xray", flag = "Xray", risky = true, callback = function() end })
    sections.Section2:AddToggle({ enabled = true, text = "Korblox & Headless", flag = "Korblox", risky = true, callback = function() end })

    sections.Section2:AddSeparator({ text = "Combate" })
    sections.Section2:AddToggle({ enabled = true, text = "Aimbot", flag = "Aimbot", risky = true, callback = function() end })
    sections.Section2:AddToggle({ enabled = true, text = "Mostrar FOV", flag = "FOV", risky = true, callback = function() end })
    sections.Section2:AddSlider({ text = "Tamanho FOV", flag = "FOVSize", value = 50, min = 1, max = 100, callback = function() end })

    Window:SetOpen(true)
    print("SHU HUB 2 CARREGADO - UI + NOCLIP + FLY 100%")
end
